<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.view.ftp.FTPView">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="2">
                <Label text="主机:"/>
                <TextField/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="2">
                <Label text="用户名:"/>
                <TextField/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="2">
                <Label text="密码:"/>
                <TextField/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="2">
                <Label text="端口:"/>
                <TextField/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="2">
                <Button text="连接"/>
            </HBox>
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
        </HBox>
    </top>
    <left>
        <VBox fx:id="localBox">
            <padding>
                <Insets topRightBottomLeft="5"/>
            </padding>
            <HBox spacing="5">
                <Label text="本地站点"/>
                <Label fx:id="localPathLabel"/>
            </HBox>
            <HBox fx:id="localFileListBox">
                <TableView fx:id="localFileListTableView" HBox.hgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="localFileNameColumn" text="文件名"/>
                        <TableColumn fx:id="localFileSizeColumn" text="文件大小"/>
                        <TableColumn fx:id="localFileLastModifiedTimeColumn" text="最后修改时间"/>
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </left>
    <right>
        <VBox fx:id="remoteBox">
            <padding>
                <Insets topRightBottomLeft="5"/>
            </padding>
            <HBox spacing="5">
                <Label text="远程站点"/>
                <Label fx:id="remotePathLabel"/>
            </HBox>
            <HBox fx:id="remoteFileListBox">
                <TableView fx:id="remoteFileListTableView" HBox.hgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="remoteFileNameColumn" text="文件名"/>
                        <TableColumn fx:id="remoteFileSizeColumn" text="文件大小"/>
                        <TableColumn fx:id="remoteFileLastModifiedTimeColumn" text="最后修改时间"/>
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </right>
    <padding>
        <Insets topRightBottomLeft="5"/>
    </padding>
</BorderPane>
